{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "esnext",
      "DOM"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "*.d.ts",
    "src/**/*.ts",
    "src/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
